class TransactionScreen extends StatefulWidget {
  const TransactionScreen({Key? key}) : super(key: key);

  @override
  _TransactionScreenState createState() => _TransactionScreenState();
}

class _TransactionScreenState extends State<TransactionScreen> {
  final ApiService _api = ApiService();
  List<Map<String, dynamic>> _edcMachines = [];
  bool _isLoadingMachines = true;
  // Services list loaded from API
  List<Map<String, dynamic>> _services = [];
  bool _isLoadingServices = true;
  // Transactions list loaded from API
  List<Map<String, dynamic>> _transactions = [];
  bool _isLoadingTransactions = true;
  // Service fees fetched from API
  String _serviceFeeDisplay = 'Rp0';
  String _bankFeeDisplay = 'Rp0';
  // Formatting control for nominal input
  bool _isFormattingNominal = false;
  // Formatting control for custom fee inputs
  // ignore: unused_field
  bool _isFormattingServiceFee = false;
  // ignore: unused_field
  bool _isFormattingBankFee = false;
  // selected machine id for API calls
  dynamic selectedMachineId;
  // Real-time clock
  String _currentTime = '';
  Timer? _timer;
  // Debounce timer for API calls
  Timer? _debounceTimer;

  String selectedMachine = '-- Pilih Mesin --';
  String selectedService = '-- Pilih Layanan --';
  final nominalController = TextEditingController(text: '0');
  // Additional form controllers
  final tambahanController = TextEditingController(text: '0');
  final customerNameController = TextEditingController();
  final destinationNumberController = TextEditingController();
  final keteranganController = TextEditingController();
  // Fee display controllers (editable, store numeric string without prefix)
  final serviceFeeController = TextEditingController(text: '0');
  final bankFeeController = TextEditingController(text: '0');
  final totalFeesController = TextEditingController(text: 'Rp0');

  Map<String, dynamic>? _dashboard;
  bool _isLoadingDashboard = true;

  @override
  void initState() {
    super.initState();
    _updateTime();
    _timer = Timer.periodic(const Duration(seconds: 1), (timer) {
      _updateTime();
    });

    // Load essential data first
    _loadEdcMachines();
    _loadServices();
    _loadTransactions();
    nominalController.addListener(_onNominalInput);
    tambahanController.addListener(_onTambahanInput);
    _loadDashboard();
  }

  @override
  void dispose() {
    _timer?.cancel();
    _debounceTimer?.cancel();
    nominalController.removeListener(_onNominalInput);
    tambahanController.removeListener(_onTambahanInput);
    nominalController.dispose();
    tambahanController.dispose();
    customerNameController.dispose();
    destinationNumberController.dispose();
    keteranganController.dispose();
    serviceFeeController.dispose();
    bankFeeController.dispose();
    totalFeesController.dispose();
    super.dispose();
  }

  void _updateTime() {
    final now = DateTime.now();
    setState(() {
      _currentTime =
          '${now.day.toString().padLeft(2, '0')}/${now.month.toString().padLeft(2, '0')}/${now.year} ${now.hour.toString().padLeft(2, '0')}:${now.minute.toString().padLeft(2, '0')}:${now.second.toString().padLeft(2, '0')}';
    });
  }

  Future<void> _loadEdcMachines() async {
    try {
      final token = Provider.of<AuthProvider>(context, listen: false).token;
      final resp = await _api.fetchEdcMachines(token: token);
      final responseData = resp.data;
      debugPrint('EDC fetch response: $responseData');
      List<dynamic> list = [];

      // Support two response shapes:
      // 1) API returns a JSON array (List)
      // 2) API returns { success: true, data: [...] }
      if (responseData is List) {
        list = responseData;
      } else if (responseData is Map) {
        if (responseData['data'] is List) {
          list = responseData['data'] as List<dynamic>;
        } else if (responseData['success'] == true &&
            responseData['data'] is List) {
          list = responseData['data'] as List<dynamic>;
        }
      }

      // Normalize into List<Map<String, dynamic>>
      _edcMachines = list.map((e) {
        if (e is Map) {
          return Map<String, dynamic>.from(e.cast<String, dynamic>());
        }
        return {'name': e.toString()};
      }).toList();
    } catch (e) {
      debugPrint('Error fetching EDC machines: $e');
    }

    if (!mounted) return;
    setState(() => _isLoadingMachines = false);
  }

  Future<void> _loadServices() async {
    try {
      final token = Provider.of<AuthProvider>(context, listen: false).token;
      final resp = await _api.fetchServices(token: token);
      final responseData = resp.data;
      debugPrint('Services fetch response: $responseData');
      List<dynamic> list = [];

      if (responseData is List) {
        list = responseData;
      } else if (responseData is Map) {
        if (responseData['data'] is List) {
          list = responseData['data'] as List<dynamic>;
        }
      }

      _services = list.map((e) {
        if (e is Map) {
          return Map<String, dynamic>.from(e.cast<String, dynamic>());
        }
        return {'name': e.toString()};
      }).toList();
    } catch (e) {
      debugPrint('Error fetching services: $e');
    }

    if (!mounted) return;
    setState(() => _isLoadingServices = false);
  }

  Future<void> _loadTransactions() async {
    try {
      final token = Provider.of<AuthProvider>(context, listen: false).token;
      final resp = await _api.fetchTransactions(token: token);
      final responseData = resp.data;
      debugPrint('Transactions fetch response: $responseData');

      List<dynamic> list = [];
      if (responseData is List) {
        list = responseData;
      } else if (responseData is Map && responseData['data'] is List) {
        list = responseData['data'] as List<dynamic>;
      }

      _transactions = list.map((e) {
        if (e is Map) {
          return Map<String, dynamic>.from(e.cast<String, dynamic>());
        }
        return <String, dynamic>{};
      }).toList();
    } catch (e) {
      debugPrint('Error fetching transactions: $e');
    }

    if (!mounted) return;
    setState(() => _isLoadingTransactions = false);
  }

  Future<void> _loadDashboard() async {
    try {
      final token = Provider.of<AuthProvider>(context, listen: false).token;
      final resp = await _api.fetchDashboardCashier(token: token);
      final data = resp.data;
      if (data is Map<String, dynamic>) {
        _dashboard = data;
      }
    } catch (e) {
      debugPrint('Error fetching dashboard: $e');
    }
    if (!mounted) return;
    setState(() => _isLoadingDashboard = false);
  }

  void _onNominalInput() {
    if (_isFormattingNominal) return;
    final raw = nominalController.text;
    // keep only digits
    final digits = raw.replaceAll(RegExp(r'[^0-9]'), '');
    if (digits.isEmpty) {
      _isFormattingNominal = true;
      nominalController.text = '0';
      nominalController.selection = TextSelection.collapsed(
        offset: nominalController.text.length,
      );
      _isFormattingNominal = false;
      _debouncedComputeServiceFee();
      return;
    }
    final value = double.tryParse(digits) ?? 0.0;
    final formatted = _formatNumberNoDecimals(value);
    _isFormattingNominal = true;
    nominalController.text = formatted;
    nominalController.selection = TextSelection.collapsed(
      offset: nominalController.text.length,
    );
    _isFormattingNominal = false;
    _debouncedComputeServiceFee();
  }

  void _onTambahanInput() {
    // Only trigger recalculation if we have valid service and nominal
    final raw = nominalController.text;
    final cleaned = raw.replaceAll(RegExp(r'[^0-9]'), '');
    final nominal = double.tryParse(cleaned) ?? 0.0;

    final service = _services.firstWhere(
      (s) => (s['name'] ?? '').toString() == selectedService,
      orElse: () => {},
    );

    if (service.isNotEmpty && nominal > 0) {
      _debouncedComputeServiceFee();
    } else {
      // Just update total biaya without calling API
      _updateTotalBiaya();
    }
  }

  String _formatNumberNoDecimals(double value) {
    final intVal = value.round();
    final s = intVal.toString();
    // insert dot as thousand separator
    return s.replaceAllMapped(RegExp(r"\B(?=(\d{3})+(?!\d))"), (m) => '.');
  }

  // Parse numeric value from JSON fields and drop any fractional part (remove .00)
  double _parseAmountWithoutDecimals(dynamic v) {
    if (v == null) return 0.0;
    if (v is num) return v.toDouble().roundToDouble();
    var s = v.toString();
    // remove thousands separators like commas
    s = s.replaceAll(',', '');
    // if has decimal point, drop fractional part
    if (s.contains('.')) {
      s = s.split('.').first;
    }
    // keep only digits and optional minus
    s = s.replaceAll(RegExp(r'[^0-9\-]'), '');
    return double.tryParse(s) ?? 0.0;
  }

  // Format any dynamic amount as Rupiah without decimals
  String _formatCurrencyNoDecimals(dynamic v) {
    final amount = _parseAmountWithoutDecimals(v).round();
    final s = amount.toString();
    final formatted = s.replaceAllMapped(
      RegExp(r"\B(?=(\d{3})+(?!\d))"),
      (m) => '.',
    );
    return 'Rp$formatted';
  }

  void _updateTotalBiaya() {
    // Parse current values
    final raw = nominalController.text;
    final cleaned = raw.replaceAll(RegExp(r'[^0-9]'), '');
    final nominal = double.tryParse(cleaned) ?? 0.0;

    final extraRaw = tambahanController.text;
    final extraCleaned = extraRaw.replaceAll(RegExp(r'[^0-9]'), '');
    final extraFee = double.tryParse(extraCleaned) ?? 0.0;

    // Use controller values for editable fees
    final serviceFeeNum = _parseAmountWithoutDecimals(
      serviceFeeController.text,
    );
    final bankFeeNum = _parseAmountWithoutDecimals(bankFeeController.text);

    final totalNum = nominal + bankFeeNum + serviceFeeNum + extraFee;

    // Only update controller - no need for separate display variable
    totalFeesController.text = _formatCurrencyNoDecimals(totalNum);
  }

  void _debouncedComputeServiceFee() {
    _debounceTimer?.cancel();
    _debounceTimer = Timer(const Duration(milliseconds: 300), () {
      _computeServiceFee();
    });
  }

  void _onServiceChanged(String? v) {
    if (v == null) return;
    setState(() => selectedService = v);
    _debouncedComputeServiceFee();
  }

  void _onMachineChanged(String? v) {
    if (v == null) return;
    setState(() {
      selectedMachine = v;
      final found = _edcMachines.firstWhere(
        (m) => (m['name'] ?? '').toString() == v,
        orElse: () => <String, dynamic>{},
      );
      selectedMachineId = found.isNotEmpty ? found['id'] : null;
    });
    _debouncedComputeServiceFee();
  }

  Future<void> _computeServiceFee() async {
    // Cancel any previous debounce timer
    _debounceTimer?.cancel();

    // parse nominal safely (remove dots and non-digits)
    final raw = nominalController.text;
    final cleaned = raw.replaceAll(RegExp(r'[^0-9]'), '');
    final nominal = double.tryParse(cleaned) ?? 0.0;

    // find service id by name
    final service = _services.firstWhere(
      (s) => (s['name'] ?? '').toString() == selectedService,
      orElse: () => {},
    );

    // require a valid service selection and a positive nominal to call server
    if (service.isEmpty || nominal <= 0) {
      // Calculate total with current tambahan even when no service/nominal
      final extraRaw = tambahanController.text;
      final extraCleaned = extraRaw.replaceAll(RegExp(r'[^0-9]'), '');
      final extraFee = double.tryParse(extraCleaned) ?? 0.0;

      if (mounted) {
        setState(() {
          _serviceFeeDisplay = 'Rp0';
          _bankFeeDisplay = 'Rp0';

          // Update controllers in setState
          serviceFeeController.text = 'Rp0';
          bankFeeController.text = 'Rp0';
          totalFeesController.text = _formatCurrencyNoDecimals(
            nominal + extraFee,
          );
        });
      }
      return;
    }

    final serviceId = service['id'];

    try {
      final token = Provider.of<AuthProvider>(context, listen: false).token;

      final resp = await _api.calculateFee(
        serviceId: serviceId,
        amount: nominal.toInt(),
        edcMachineId: selectedMachineId,
        token: token,
      );

      if (!mounted) return;

      final data = resp.data ?? {};
      final serviceFeeNum = _parseAmountWithoutDecimals(data['service_fee']);
      final bankFeeNum = _parseAmountWithoutDecimals(data['bank_fee']);

      // Calculate total biaya = nominal + biaya admin bank + biaya layanan + biaya tambahan
      final extraRaw = tambahanController.text;
      final extraCleaned = extraRaw.replaceAll(RegExp(r'[^0-9]'), '');
      final extraFee = double.tryParse(extraCleaned) ?? 0.0;

      final totalNum = nominal + bankFeeNum + serviceFeeNum + extraFee;

      final newServiceFeeNumber = _formatNumberNoDecimals(serviceFeeNum);
      final newBankFeeNumber = _formatNumberNoDecimals(bankFeeNum);
      final newTotalFeesDisplay = _formatCurrencyNoDecimals(totalNum);
      // Update state and controllers
      setState(() {
        _serviceFeeDisplay = 'Rp$newServiceFeeNumber';
        _bankFeeDisplay = 'Rp$newBankFeeNumber';
        serviceFeeController.text = newServiceFeeNumber;
        bankFeeController.text = newBankFeeNumber;
        totalFeesController.text = newTotalFeesDisplay;
      });

      return;
    } catch (e) {
      if (!mounted) return;

      // Even on error, calculate total with current values
      final extraRaw = tambahanController.text;
      final extraCleaned = extraRaw.replaceAll(RegExp(r'[^0-9]'), '');
      final extraFee = double.tryParse(extraCleaned) ?? 0.0;

      setState(() {
        _serviceFeeDisplay = 'Rp0';
        _bankFeeDisplay = 'Rp0';

        // Update controllers in setState
        serviceFeeController.text = 'Rp0';
        bankFeeController.text = 'Rp0';
        totalFeesController.text = _formatCurrencyNoDecimals(
          nominal + extraFee,
        );
      });
      return;
    }
  }

  Future<void> _createTransaction() async {
    try {
      // Validate required fields
      if (selectedMachine == '-- Pilih Mesin --') {
        _showErrorDialog('Pilih mesin EDC terlebih dahulu');
        return;
      }

      if (selectedService == '-- Pilih Layanan --') {
        _showErrorDialog('Pilih jenis layanan terlebih dahulu');
        return;
      }

      // Parse nominal
      final raw = nominalController.text;
      final cleaned = raw.replaceAll(RegExp(r'[^0-9]'), '');
      final nominal = double.tryParse(cleaned) ?? 0.0;

      if (nominal <= 0) {
        _showErrorDialog('Masukkan nominal yang valid');
        return;
      }

      // Parse extra fee (biaya tambahan)
      final extraRaw = tambahanController.text;
      final extraCleaned = extraRaw.replaceAll(RegExp(r'[^0-9]'), '');
      final extraFee = double.tryParse(extraCleaned) ?? 0.0;

      // Get service and machine IDs
      final service = _services.firstWhere(
        (s) => (s['name'] ?? '').toString() == selectedService,
        orElse: () => {},
      );

      if (service.isEmpty) {
        _showErrorDialog('Service tidak ditemukan');
        return;
      }

      final serviceId = service['id'];
      final machineId = selectedMachineId;

      if (machineId == null) {
        _showErrorDialog('Mesin EDC tidak ditemukan');
        return;
      }

      // Parse fees from display
      final serviceFeeNum = _parseAmountWithoutDecimals(
        _serviceFeeDisplay.replaceAll('Rp', ''),
      );
      final bankFeeNum = _parseAmountWithoutDecimals(
        _bankFeeDisplay.replaceAll('Rp', ''),
      );

      // Get auth data
      final authProvider = Provider.of<AuthProvider>(context, listen: false);
      final token = authProvider.token;
      final userId = authProvider.user?['id'] ?? 1; // fallback to user ID 1

      debugPrint('=== CREATE TRANSACTION DEBUG ===');
      debugPrint('- edcMachineId: $machineId');
      debugPrint('- serviceId: $serviceId');
      debugPrint('- userId: $userId');
      debugPrint('- amount: ${nominal.toInt()}');
      debugPrint('- serviceFee: $serviceFeeNum');
      debugPrint('- extraFee: $extraFee');
      debugPrint('- bankFee: $bankFeeNum');
      debugPrint('- referenceNumber: ${destinationNumberController.text}');
      debugPrint('- customerName: ${customerNameController.text}');

      final resp = await _api.createTransaction(
        edcMachineId: machineId,
        serviceId: serviceId,
        userId: userId,
        amount: nominal.toInt(),
        serviceFee: serviceFeeNum,
        extraFee: extraFee,
        bankFee: bankFeeNum,
        referenceNumber: destinationNumberController.text.trim(),
        customerName: customerNameController.text.trim(),
        token: token,
      );

      debugPrint('Transaction created successfully: ${resp.data}');

      // Close modal first
      Navigator.of(context).pop();

      // Show success dialog with print capability
      final transactionData = resp.data;
      final transactionNumber = transactionData?['transaction_number'] ?? '';

      // Calculate total amount (same as form calculation)
      final totalAmount = nominal + bankFeeNum + serviceFeeNum + extraFee;
      final totalAmountFormatted = _formatCurrencyNoDecimals(
        totalAmount.toInt(),
      );

      // Prepare complete transaction data for printing
      final completeTransactionData = Map<String, dynamic>.from({
        ...transactionData ?? {},
        'amount': nominal.toInt(),
        'service_fee': serviceFeeNum.toInt(),
        'bank_fee': bankFeeNum.toInt(),
        'extra_fee': extraFee.toInt(),
        'customer_name': customerNameController.text.trim(),
        'reference_number': destinationNumberController.text.trim(),
        'created_at': DateTime.now().toIso8601String(),
        'service': {'name': selectedService},
        'edc_machine': {'name': selectedMachine},
        'user': authProvider.user ?? {'name': 'Nina'},
      });

      CustomSuksesDialog.show(
        context: context,
        title: 'Transaksi Berhasil!',
        message: 'Transaksi Anda telah berhasil diproses.',
        transactionNumber: transactionNumber,
        amount: totalAmountFormatted,
        transactionData: completeTransactionData,

        onClose: () {
          // Reset form and reload transactions after dialog is closed
          _resetForm();
          _loadTransactions();
        },
        onPrint: () async {
          // Load printer name from settings file
          try {
            final dir = await getApplicationDocumentsDirectory();
            final file = File('${dir.path}/BRILink/printer_settings.json');
            String name = '';
            if (await file.exists()) {
              final data =
                  jsonDecode(await file.readAsString()) as Map<String, dynamic>;
              name = data['printer_name'] as String? ?? '';
            }
            if (name.isNotEmpty) {
              final controller = PrinterController(printerName: name);
              final ok = await controller.printTransaction(
                completeTransactionData,
              );
              if (context.mounted) {
                ScaffoldMessenger.of(context).showSnackBar(
                  SnackBar(
                    content: Text(ok ? 'Print berhasil' : 'Gagal print'),
                  ),
                );
              }
            }
          } catch (e) {
            if (context.mounted) {
              ScaffoldMessenger.of(
                context,
              ).showSnackBar(SnackBar(content: Text('Error print: $e')));
            }
          }
        },
      );
    } catch (e) {
      debugPrint('Create transaction error: $e');
      _showErrorDialog('Gagal membuat transaksi: $e');
    }
  }

  void _showErrorDialog(String message) {
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: const Text('Error'),
        content: Text(message),
        actions: [
          TextButton(
            onPressed: () => Navigator.of(context).pop(),
            child: const Text('OK'),
          ),
        ],
      ),
    );
  }

  void _resetForm() {
    setState(() {
      selectedMachine = '-- Pilih Mesin --';
      selectedService = '-- Pilih Layanan --';
      selectedMachineId = null;
      nominalController.text = '0';
      tambahanController.text = '0';
      customerNameController.clear();
      destinationNumberController.clear();
      keteranganController.clear();
      _serviceFeeDisplay = 'Rp0';
      _bankFeeDisplay = 'Rp0';
    });

    // Reset fee controllers (editable numeric values)
    serviceFeeController.text = '0';
    bankFeeController.text = '0';
    totalFeesController.text = 'Rp0';
  }

